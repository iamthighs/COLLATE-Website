@using COLLATEFINAL.Models
@model PrototypeModel

@{
    ViewData["Title"] = "Details";
}


<partial name="_NewNavbar" />
<div id="layoutSidenav">
    <partial name="_NewSidenav" />
    <div id="layoutSidenav_content">
        <main>
            <header class="py-10 mb-4 bg-green">
                <div class="container-xl px-4">
                    <div class="text-center">
                        <h1 class="text-white">Collection of Latest Laboratory Activities, Trainings & Engagements</h1>
                        <p class="lead mb-0 text-white-50">A project website of SCENE organization designed to provide secure and efficient data management for Computer Engineering students.</p>
                    </div>
                </div>
            </header>
            <!-- Main page content-->
            <div class="container-xl px-4">
                <div class="row">

                    @if (Model != null)
                    {
                        <div class="col-lg-12 mt-2">
                            <!-- Overview -->
                            <div class="card bg-success shadow mb-4">

                                <div class="card-body text-center">
                                    <h3 class="text-center font-weight-bold text-light">
                                        @Model.Title
                                    </h3>

                                </div>


                            </div>

                        </div>

                        <div class="col-lg-8 mb-2">
                            <!-- Overview -->
                            <div class="card shadow mb-4">
                                <div class="card-header py-3 text-center">
                                    <h6 class="m-0 font-weight-bold text-primary text-center">Introduction</h6>
                                </div>
                                <div class="card-body text-center m-3">
                                    <p class="text-dark text-justify" style="text-indent:50px">
                                        @Html.Raw(Model.Description)
                                    </p>

                                </div>

                            </div>

                        </div>

                        <div class="col-lg-4 mb-2">
                            <!-- Overview -->
                            <div class="card shadow mb-4">
                                <div class="card-header py-3 text-center">
                                    <h6 class="m-0 font-weight-bold text-primary text-center">Details</h6>
                                </div>
                                <div class="card-body text-center m-3">
                                    <h6 class="text-dark text-center">
                                        Posted Date:
                                    </h6>
                                    <h6 class="text-dark text-center">
                                        @Model.PostedDate.ToString("MMM dd, yyyy")
                                    </h6>

                                    <hr />
                                    <h6 class="text-dark text-center">
                                        Year & Section:
                                    </h6>
                                    <h6 class="text-dark text-center">
                                        BSCpE 3-1
                                    </h6>



                                </div>
                                <div class="card-footer text-center">
                                    <a href="" download="@Url.Content($"~/PDF/{Model.FileUrl}")" class="d-sm-inline-block btn btn-sm btn-primary shadow-sm" download>
                                        <i class="fas fa-download text-white-50"></i> Download PDF
                                    </a>
                                </div>

                            </div>

                        </div>
                    }
                    else
                    {
                        <p>Instructional Material was not found</p>
                    }

                </div>



            </div>

        </main>
        <partial name="_NewFooter" />
    </div>
</div>