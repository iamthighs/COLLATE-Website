@model IEnumerable<IdentityRole>

@foreach(var role in Model)
{
     <!-- Edit Role modal-->
                    <div class="modal fade" id="editRoleModal_@role.Id" tabindex="-1" role="dialog" aria-labelledby="editRoleModalLabel" aria-hidden="true">
                        <div class="modal-dialog" role="document">
                            <div class="modal-content">
                                <div class="modal-header">
                                    <h5 class="modal-title" id="editRoleModalLabel">Edit Role</h5>
                                    <button class="btn-close" type="button" data-bs-dismiss="modal" aria-label="Close"></button>
                                </div>
                                <form asp-action="EditRole" asp-controller="Administration" asp-route-id="@role.Id" method="post">
                                <div class="modal-body">
                                    
                                        <div class="mb-0">
                                            <label class="mb-1 small text-muted" for="formRoleName">Role Name</label>
                                            <input type="text" placeholder="Enter new Role name..." id="roleName_@role.Id" name="roleName" class="form-control" required value="@role.Name" />
                                        </div>
                                    
                                </div>
                                <div class="modal-footer">
                                    <button class="btn btn-danger-soft text-danger" type="button" data-bs-dismiss="modal">Cancel</button>
                                    <button class="btn btn-primary-soft text-primary" type="submit">Save Changes</button>
                                </div>
                                </form>
                            </div>
                        </div>
                    </div>

    
}
