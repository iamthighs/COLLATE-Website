@model List<COLLATEFINAL.ViewModels.UserRoleViewModel>

@{
    var roleId = ViewBag.roleId;
    ViewData["ActivePage"] = ManageSidebar.ListUsers;
}


@{
    ViewData["Title"] = "Edit Users in Role";
}

<link rel="stylesheet" href="//cdnjs.cloudflare.com/ajax/libs/toastr.js/latest/toastr.min.css" />

            <partial name="_NewSidenav"/>
            <div id="layoutSidenav_content">
               <main>
                    <!-- Begin Page Content -->
                    <div class="container-xl px-4 mt-4">
                        <partial name="_Notification" />
                        <h1>Edit Users in Role</h1>
                        <hr />
                        <form method="post" class="mt-3">
                    
                            <div class="card">
                                <div class="card-header">
                                    <h3>Add or Remove users from this role</h3>
                                </div>
                                <div class="card-body">
                                    @for (int i = 0; i < Model.Count; i++)
                                    {
                                        <div class="form-check m-1">
                                            <input type="hidden" asp-for="@Model[i].UserId">
                                            <input type="hidden" asp-for="@Model[i].UserName">
                                            <input asp-for="@Model[i].IsSelected" class="form-check-input">
                                            <label class="form-check-label" asp-for="@Model[i].IsSelected">
                                                @Model[i].UserName
                                            </label>
                                        </div>
                                
                                    }
                                </div>
                                <div class="card-footer">
                                    <input type="submit" value="Update" class="btn btn-primary" style="width:auto" />
                                    <a asp-action="EditRole" asp-route-id="@roleId" class="btn btn-primary" style="width:auto">Cancel</a>
                                </div>
                            </div>
                        </form>
                    </div>
                    <!-- /.container-fluid -->
                </main>
                <partial name="_NewFooter"/>
            </div>


@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }

    
}
