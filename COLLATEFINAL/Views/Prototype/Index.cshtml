@model IEnumerable<PrototypeModel>
@inject SignInManager<AppIdentityUser> SignInManager
@inject UserManager<AppIdentityUser> UserManager

@{
    ViewData["Title"] = "Instructional Materials";
    ViewData["ActivePage"] = ManageSidebar.Prototype;
}


<!-- Page Wrapper -->
<div id="wrapper">

    <!-- Sidebar -->
    <partial name="_ManageSidebar" />
    <!-- End of Sidebar -->
    <!-- Content Wrapper -->
    <div id="content-wrapper" class="d-flex flex-column">

        <!-- Main Content -->
        <div id="content">

            <!-- Topbar -->
            <nav class="navbar navbar-expand navbar-light bg-white topbar mb-4 static-top shadow">

                <!-- Sidebar Toggle (Topbar) -->
                <button id="sidebarToggleTop" class="btn btn-link d-md-none rounded-circle mr-3">
                    <i class="fa fa-bars"></i>
                </button>


                <!-- Topbar Navbar -->
                <ul class="navbar-nav ml-auto">

                    





                    

                    <!-- Nav Item - User Information -->
                    <partial name="_LoginPartialProfileUser" />

                </ul>

            </nav>
            <!-- End of Topbar -->
            <!-- Begin Page Content -->
            <div class="container-fluid">

                <ul class="breadcrumb">
                    <li><a asp-area="" asp-controller="Home" asp-action="Index">Home</a></li>
                    <li><a asp-area="" asp-controller="Dashboard" asp-action="Index">Dashboard</a></li>
                    <li class="text-dark">Instructional Materials</li>
                </ul>

                <!-- Content Row -->
                <div class="row">
                    
                    <div class="col-lg-12 mb-4">
                        <!-- Overview -->
                        <div class="card lift shadow mb-4">
                            <div class="card-header bg-success py-3 text-center">
                                <h6 class="m-0 font-weight-bold text-light text-center">Overview</h6>
                            </div>
                            <div class="card-body text-center">
                                <h6 class="text-dark text-justify" style="text-indent:50px">
                                    In this page, we are presenting the inventions and innovations of Students of Computer Engineering with Natural Excellence organization that includes their paper with sample model, concept and process, design, electronic system, and software programming. Our team specifically aims to show the records of these creative ideas to help our fellow computer engineering students illustrate the product for their project and improve the overall understanding of the design. It also allows the design team to comprehend the product's function, and target audience. Making a prototype can thus highlight unanticipated physical, technical or financial constraints and will absolutely save us time and money.
                                </h6>

                            </div>

                        </div>

                    </div>


                    @foreach (var prototype in Model)
                    {
                        <div class="col-xl-4 col-md-4 mb-4">

                            <div class="card lift shadow mb-4">
                                <img src="@Url.Content($"~/Uploads/{prototype.ImageUrl}")" style="max-height: 300px" class="card-img-top" alt="@prototype.Title" />
                                <h5 class="card-title p-3 cut-text font-weight-bold" style="max-height:40px; min-height:40px">@prototype.Title</h5>


                                <ul class="list-group list-group-flush">
                                    <li class="list-group-item">
                                        @prototype.PostedDate.ToString("MMM dd, yyyy")
                                    </li>
                                </ul>

                                @if (SignInManager.IsSignedIn(User))
                                {
                                    <div class="card-footer text-center">
                                        <a href="@Url.Action("PrototypeDetail","Detail", new { id = prototype.Id, pageType = "Prototype"})" class="d-sm-inline-block btn btn-sm btn-info shadow-sm">
                                            <i class="fas fa-info-circle text-white-50"></i> See Full Details
                                        </a>
                                    </div>

                                
                                }
                                else
                                {
                                    <div class="card-footer text-center">
                                        <a href="@Url.Action("PrototypeDetail","Detail", new { id = prototype.Id, pageType = "Prototype"})" class="d-sm-inline-block btn btn-sm btn-info shadow-sm">
                                            <i class="fas fa-info-circle text-white-50"></i> Sign in to View Details
                                        </a>
                                    </div>
                                }

                            </div>
                        </div>
                    }

                    
                    
                </div>

                
            </div>
            <!-- /.container-fluid -->

        </div>
        <!-- End of Main Content -->
        <!-- Footer -->
        <partial name="_Footer" />

        <!-- End of Footer -->

    </div>
    <!-- End of Content Wrapper -->

</div>
<!-- End of Page Wrapper -->
<!-- Scroll to Top Button-->


<a class="scroll-to-top rounded" href="#page-top">
    <i class="fas fa-angle-up"></i>
</a>

<!-- Logout Modal-->
<div class="modal fade" id="logoutModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel"
     aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="exampleModalLabel">Ready to Leave?</h5>
                <button class="close" type="button" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">×</span>
                </button>
            </div>
            <div class="modal-body">Select "Logout" below if you are ready to end your current session.</div>
            <div class="modal-footer">
                <button class="btn btn-secondary" type="button" data-dismiss="modal">Cancel</button>
                <a class="btn btn-primary" href="login.html">Logout</a>
            </div>
        </div>
    </div>
</div>








