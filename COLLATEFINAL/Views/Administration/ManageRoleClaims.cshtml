@model COLLATEFINAL.ViewModels.RoleClaimsViewModel

@{
    ViewData["Title"] = "Manage Role Claims";
    ViewData["ActivePage"] = ManageSidebar.ListRoles;
}
<link rel="stylesheet" href="//cdnjs.cloudflare.com/ajax/libs/toastr.js/latest/toastr.min.css" />
<partial name="_NewNavbar" />
<div id="layoutSidenav">
            <partial name="_NewSidenav"/>
            <div id="layoutSidenav_content">
               <main>
                    <!-- Begin Page Content -->
                    <div class="container-xl px-4 mt-4">
                        <partial name="_Notification" />
                        <form method="post">
                            <div class="card">
                                <div class="card-header">
                                    <h2>Manage Role Claims</h2>
                                </div>
                                <div class="card-body">
                                    @for (int i = 0; i < Model.Cliams.Count; i++)
                                    {
                                        <div class="form-check m-1">
                                            <input type="hidden" asp-for="@Model.Cliams[i].ClaimType" />
                                            <input asp-for="@Model.Cliams[i].IsSelected" class="form-check-input" />


                                            <label class="form-check-label" asp-for="@Model.Cliams[i].IsSelected">
                                                @Model.Cliams[i].ClaimType
                                            </label>


                                        </div>
                                    }
                                    <div asp-validation-summary="All" class="text-danger"></div>
                                </div>
                                <div class="card-footer">
                                    <input type="submit" value="Update" class="btn btn-primary" style="width:auto" />
                                    <a asp-action="EditRole" asp-route-id="@Model.RoleId" class="btn btn-primary"
                                       style="width:auto">Cancel</a>
                                </div>
                            </div>
                        </form>




                    </div>
                    <!-- /.container-fluid -->
                </main>
                <partial name="_NewFooter"/>
            </div>
</div>


@section Scripts {
    <script src="~/js/CustomScripts.js"></script>
}

